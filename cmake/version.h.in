#ifndef NEONEURON_VERSION_H
#define NEONEURON_VERSION_H

#define NEONEURON_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define NEONEURON_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define NEONEURON_VERSION_PATCH @PROJECT_VERSION_PATCH@

#define NEONEURON_VERSION "@PROJECT_VERSION@"
#define NEONEURON_GIT_COMMIT "@GIT_COMMIT@"

#define NEONEURON_BUILD_DATE __DATE__ " " __TIME__

#define NEONEURON_BUILD_YEAR ( \
    (__DATE__[7] - '0') * 1000 + \
    (__DATE__[8] - '0') *  100 + \
    (__DATE__[9] - '0') *   10 + \
    (__DATE__[10] - '0') )

#endif //NEONEURON_VERSION_H